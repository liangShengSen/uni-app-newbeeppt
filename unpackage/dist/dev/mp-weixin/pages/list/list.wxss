page {
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.modal-content {
  position: relative;
  background-color: #fff;
  border-radius: 4px;
  width: 90%;
  margin: 0 auto;
  box-sizing: border-box;
  overflow: hidden;
  padding-top: 30px;
}
.modal-content .close-icon {
  position: absolute;
  right: 10px;
  top: 5px;
}
.modal-content .title-text {
  font-size: 13px;
  color: #999;
  padding: 13px 15px;
}
.modal-content .title-text:first-child {
  padding-top: 0;
}
.modal-content .item-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: stretch;
  -webkit-justify-content: stretch;
          justify-content: stretch;
  padding: 0 15px;
  -webkit-transition: all .3s;
  transition: all .3s;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
}
.modal-content .item-box .item {
  height: 32px;
  background: #f4f4f4;
  border-radius: 3px;
  line-height: 32px;
  text-align: center;
  font-size: 14px;
  position: relative;
  white-space: nowrap;
  padding: 0 8px;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 8px;
  margin-right: 10px;
}
.modal-content .item-box .item.active {
  color: #fff;
  background: #f7931e;
}
.modal-content .btn-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  padding: 0 15px;
  margin: 10px 0;
}
.modal-content .btn-box .btn {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  height: 40px;
  border-radius: 6px;
  color: #fff;
  font-size: 16px;
  text-align: center;
  line-height: 40px;
}
.modal-content .btn-box .btn.cancel {
  background-color: #f7931e;
  margin-right: 10px;
}
.modal-content .btn-box .btn.submit {
  background-color: #ff6b00;
  margin-left: 10px;
}
.list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  overflow: hidden;
}
.list .list-hd {
  padding: 10px 0;
}
.list .list-hd .current-filter-text {
  font-size: 16px;
  color: #f60;
  text-align: center;
}
.list .list-hd .filter-icon {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  padding: 0 15px;
}
.list .list-hd .filter-icon .icon-shaixuan {
  font-size: 20px;
  color: #f7931e;
}
.list .list-hd .filter-icon .text {
  font-size: 16px;
  color: #f7931e;
  padding-right: 5px;
}
.list .list-content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  box-sizing: border-box;
  height: calc(100% - 60px);
}
.list .list-content .list-scroll {
  height: 100%;
}

