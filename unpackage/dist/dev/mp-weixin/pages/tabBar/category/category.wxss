page {
  height: 100%;
}
.category {
  height: 100%;
}
.category .stages {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 0 15px;
  height: 30px;
}
.category .stages .stage-item {
  position: relative;
  margin-right: 35px;
  color: #666;
  font-size: 13px;
  line-height: 30px;
}
.category .stages .stage-item::after {
  position: absolute;
  bottom: 0px;
  left: 50%;
  margin-left: -9px;
  content: '';
  width: 18px;
  height: 2px;
  -webkit-border-radius: 2px;
          border-radius: 2px;
  background-color: transparent;
}
.category .stages .stage-item.active {
  color: #333;
  font-size: 15px;
}
.category .stages .stage-item.active::after {
  background-color: #f07373;
}
.category .category-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 5px;
  height: calc(100% - 79px);
  height: calc(100% - 99px);
}
.category .category-content .category-content_left {
  height: 100%;
  width: 100px;
}
.category .category-content .category-content_left .subjects {
  width: 100%;
  min-height: 100%;
  text-align: center;
  background-color: #f7f7f7;
}
.category .category-content .category-content_left .subjects .subject-item {
  height: 36px;
  line-height: 36px;
  font-size: 12px;
  color: #333;
  -webkit-transition: all ease-in-out .2s;
  transition: all ease-in-out .2s;
}
.category .category-content .category-content_left .subjects .subject-item.active {
  color: #f07373;
  background-color: #fff;
}
.category .category-content .category-content_right .version-box {
  padding: 0 15px;
}
.category .category-content .category-content_right .version-box .version-item {
  -webkit-box-shadow: -5px 0 5px rgba(0, 0, 0, 0.01), 0 -5px 5px rgba(0, 0, 0, 0.01), 5px 0 5px rgba(0, 0, 0, 0.01), 0 5px 5px rgba(0, 0, 0, 0.01);
          box-shadow: -5px 0 5px rgba(0, 0, 0, 0.01), 0 -5px 5px rgba(0, 0, 0, 0.01), 5px 0 5px rgba(0, 0, 0, 0.01), 0 5px 5px rgba(0, 0, 0, 0.01);
  padding: 5px 10px;
  margin: 10px auto;
  -webkit-border-radius: 4px;
          border-radius: 4px;
}
.category .category-content .category-content_right .version-box .version-item .name {
  padding: 5px 0;
  font-size: 13px;
  color: #999;
  font-weight: 400;
}
.category .category-content .category-content_right .version-box .version-item .item-box {
  font-size: 0;
  letter-spacing: 0;
}
.category .category-content .category-content_right .version-box .version-item .item-box .item {
  display: inline-block;
  font-size: 12px;
  width: 33.33333%;
  height: 28px;
  line-height: 28px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  border-top: 0;
  border-left: 0;
}
.category .category-content .category-content_right .version-box .version-item .item-box .item.active .text {
  color: #f07373;
}
.category .category-content .category-content_right .version-box .version-item .item-box .item.chapter {
  width: auto;
  margin-right: 15px;
}
.category .category-content .category-content_right .version-box .version-item .item-box .item .text {
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #333;
}

