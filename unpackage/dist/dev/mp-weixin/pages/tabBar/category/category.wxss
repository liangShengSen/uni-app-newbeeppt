page {
  height: 100%;
}
.category {
  height: 100%;
}
.category .stages {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 0 15px;
}
.category .stages .stage-item {
  position: relative;
  margin-right: 35px;
  color: #666;
  font-size: 13px;
  line-height: 30px;
}
.category .stages .stage-item::after {
  position: absolute;
  bottom: 0px;
  left: 50%;
  margin-left: -9px;
  content: '';
  width: 18px;
  height: 2px;
  -webkit-border-radius: 2px;
          border-radius: 2px;
  background-color: transparent;
}
.category .stages .stage-item.active {
  color: #333;
  font-size: 15px;
}
.category .stages .stage-item.active::after {
  background-color: #f07373;
}
.category .category-content {
  margin-top: 5px;
  height: calc(100% - 79px);
  height: calc(100% - 99px);
}
.category .category-content .category-content_left {
  height: 100%;
}
.category .category-content .category-content_left .subjects {
  width: 80px;
  height: 100%;
  text-align: center;
  background-color: #f7f7f7;
}
.category .category-content .category-content_left .subjects .subject-item {
  height: 32px;
  line-height: 32px;
  font-size: 12px;
  color: #333;
}
.category .category-content .category-content_left .subjects .subject-item.active {
  color: #f07373;
  background-color: #fff;
}

