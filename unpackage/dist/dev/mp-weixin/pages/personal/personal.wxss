page {
  height: 100%;
}
.modal-content {
  background-color: #fff;
  -webkit-border-radius: 4px;
          border-radius: 4px;
  width: 90%;
  margin: 0 auto;
  padding: 20px;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.modal-content .form-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-bottom: 20px;
}
.modal-content .form-item .label {
  color: #999;
  font-size: 14px;
}
.modal-content .form-item .input {
  width: 85%;
  font-size: 14px;
  color: #333;
  padding: 5px 0;
