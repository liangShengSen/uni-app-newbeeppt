<view class="personal"><view class="section"><view class="personal-item"><text class="text">头像</text><view class="right"><view data-event-opts="{{[['tap',[['setUserAvatar',['$event']]]]]}}" class="content" bindtap="__e"><block wx:if="{{userInfo.avatar}}"><image class="image" src="{{userInfo.avatar}}" mode="aspectFill"></image></block><block wx:else><text>未设置</text></block></view><uni-icons vue-id="ffa91980-1" type="arrowright" size="14" color="#999" bind:__l="__l"></uni-icons></view></view><view data-event-opts="{{[['tap',[['showModal',['nickname']]]]]}}" class="personal-item" bindtap="__e"><text class="text">昵称</text><view class="right"><view class="content">{{userInfo.nickname||'未设置'}}</view><uni-icons vue-id="ffa91980-2" type="arrowright" size="14" color="#999" bind:__l="__l"></uni-icons></view></view><view class="personal-item"><text class="text">性别</text><view class="right"><view class="content"><picker class="gender-picker" value="{{userInfo.gender}}" range="{{genderArr}}" range-key="name" data-event-opts="{{[['change',[['bindPickerChange',['$event']]]]]}}" bindchange="__e"><view class="uni-input">{{genderArr[userInfo.gender].name}}</view></picker></view><uni-icons vue-id="ffa91980-3" type="arrowright" size="14" color="#999" bind:__l="__l"></uni-icons></view></view></view><view class="section"><view class="personal-item"><text class="text">手机绑定</text><view data-event-opts="{{[['tap',[['showModal',['mobile']]]]]}}" class="right" bindtap="__e"><view class="content">{{isBindPhone?userInfo.username:''+(userInfo.mobile||'未设置')}}</view><block wx:if="{{!userInfo.username||!isBindPhone}}"><uni-icons vue-id="ffa91980-4" type="arrowright" size="14" color="#999" bind:__l="__l"></uni-icons></block></view></view><view class="personal-item"><text class="text">邮箱绑定</text><view data-event-opts="{{[['tap',[['showModal',['email']]]]]}}" class="right" bindtap="__e"><view class="content">{{!isBindPhone?''+(userInfo.username||'未设置'):''+(userInfo.email||'未设置')}}</view><block wx:if="{{!userInfo.username||isBindPhone}}"><uni-icons vue-id="ffa91980-5" type="arrowright" size="14" color="#999" bind:__l="__l"></uni-icons></block></view></view></view><uni-popup class="vue-ref" vue-id="ffa91980-6" type="center" data-ref="popup" bind:__l="__l" vue-slots="{{['default']}}"><view class="modal-content"><block wx:if="{{formType==='nickname'}}"><view class="form-item"><view class="label">昵称：</view><input class="input" focus="{{true}}" type="text" placeholder="请输入昵称" data-event-opts="{{[['input',[['__set_model',['$0','nickname','$event',[]],['userInfo']]]]]}}" value="{{userInfo.nickname}}" bindinput="__e"/></view></block><block wx:if="{{formType==='email'}}"><view class="form-item"><view class="label">邮箱：</view><input class="input" focus="{{true}}" type="text" placeholder="请输入邮箱" data-event-opts="{{[['input',[['__set_model',['$0','email','$event',[]],['userInfo']]]]]}}" value="{{userInfo.email}}" bindinput="__e"/></view></block><block wx:if="{{formType==='mobile'}}"><view class="form-item"><view class="label">手机：</view><input class="input" focus="{{true}}" type="text" placeholder="请输入手机" data-event-opts="{{[['input',[['__set_model',['$0','mobile','$event',[]],['userInfo']]]]]}}" value="{{userInfo.mobile}}" bindinput="__e"/></view></block><view data-event-opts="{{[['tap',[['updateUser',['$event']]]]]}}" class="btn" bindtap="__e">确定</view></view></uni-popup></view>