.modal-content {
  background-color: #fff;
  border-radius: 4px;
  width: 90%;
  margin: 0 auto;
  padding: 20px;
  box-sizing: border-box;
}
.modal-content .content {
  font-size: 16px;
  color: #666;
  margin-bottom: 20px;
}
.modal-content .btn {
  height: 36px;
  line-height: 36px;
  font-size: 16px;
  text-align: center;
  color: #fff;
  border-radius: 36px;
  background: -webkit-linear-gradient(left, #ff978d, #ffbb69);
  background: linear-gradient(left, #ff978d, #ffbb69);
}
.help {
  height: 100%;
}
.help .list {
  padding: 10px 15px;
}
.help .list .list-item {
  padding: 14px 0;
  color: #333;
  font-size: 16px;
  border-bottom: 1px solid #f5f5f5;
}
.help .list .list-item::before {
  content: '•';
  color: #ccc;
  padding-right: 10px;
}

